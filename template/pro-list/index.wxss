.fd-card{
    height: 300rpx;
    margin-bottom: 30rpx;
    /*box-shadow: 0 2px 12px 0 rgba(0, 0, 0, .1);*/
    /*border-radius: 8px;*/
}
.fd-card-header{
    display: flex;
    justify-content: space-between;
    align-items: center;
    height: 100rpx;
    padding: 0 20rpx;
    background: #FBFBFB;
    font: 24rpx bold;
}

.fd-card-body{
    padding: 0 20rpx;
    height: 200rpx;
    overflow: hidden;
}
.pro-ymd {
    font-size: 35rpx;
}
.pro-btn-group {
    width: max-content;
    position: absolute;
}
.pro-btn{
    display: table-cell;
    white-space: normal;
    width: 70px;
    padding: 0 20px;
    color: #fff;
    vertical-align: middle;
    height: 200rpx;
}
.pro-title {
    padding: 0 20rpx;
    font-size: 40rpx;
    font-weight: 500;
    line-height: 2;
    margin: 10rpx 0 10rpx;
}

.pro-remarks {
    font: 18rpx;
    color: #C2C2C2;
    margin-bottom: 20rpx;
}
.pro-tag {
    margin-right: 20rpx;
}
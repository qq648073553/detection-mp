<template name="proList">
    <view id="proList">
        <view class="fd-card"  wx:for="{{list}}" wx:key="id" >
            <navigator   url="/pages/pro-delegation/pro-delegation?id={{item.id}}&status={{item.status}}" hover-class="none">
                <view class="fd-card-header">
                    <view class="pro-ymd">{{item.ymd}}</view>
                    <!--                <van-tag color="{{item.status.color}}" size="large">{{item.status.title}}</van-tag>-->
                </view>


            </navigator>
                <van-swipe-cell  left-width="{{item.status === proStatus.official ? 0 : 68 }}" right-width="{{ 68 }}" style="height:'max-content">
                    <view slot="left" style="height:100%" wx:if="{{item.status !== proStatus.official}}">
                        <navigator class="pro-btn"   style="background:#999" url="/pages/pro-cancel/pro-cancel?type=0&id={{item.id}}">撤销工程</navigator>
                    </view>

                    <view class="fd-card-body" catch:tap="goBusiness" data-id="{{item.id}}" >
                        <view>
                            <view class="pro-title ">{{item.title}}</view>
                            <view class="pro-remarks ">{{item.remarks}}</view>
                        </view>
                        <van-icon name="ellipsis" color="#c2c2c2" size="30px" class="fd-card-ellipsis" />
                        <!--                    <van-tag  plain class="pro-tag" wx:for="{{item.tags}}" wx:for-item="tag" color="{{tag.color}}">{{tag.title}}</van-tag>-->

                    </view>

                    <view slot="right" style="height:100%">
                        <navigator wx:if="{{item.status === proStatus.beforeConfirm}}" class="pro-btn"  style="background:#4387F6" url="/pages/pro-detail/pro-detail?type=modify" hover-class="none">信息修改</navigator>
                        <navigator wx:else class="pro-btn"  style="background:#F0641F" url="/pages/pro-modify/pro-modify?type=0" hover-class="none">信息修改</navigator>

                    </view>
                </van-swipe-cell>

        </view>
    </view>
</template>

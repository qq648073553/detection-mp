
.update-container {
    display: flex;
    flex-flow: column nowrap;
    padding: 60px 30px;
    align-items: center;
}
.input-icon{
    font-size: 30px;
}
.input-icon .van-icon {
    position: absolute;
    line-height: 55px;
    left: 10px;
}
.info-old {
    margin-top: 60px;
    text-align: center;
    letter-spacing: 1px;
    line-height: 3em;
}
.info-old view:nth-of-type(1) {
    font-size: 16px;
    color: #989898;
}
.info-old view:nth-of-type(2) {
    margin-bottom: 30px;
    font-size: 18px;
    color: #6B6B6B;
}
.input-item {
    position: relative;
    display: flex;
    align-items: center;
    color: #C7C7C7;
    height: 55px;
    margin-bottom: 30px;
    width: 100%;
}
.input-otp {
    padding-right: 110px;
}
.input-item-line {
    position: absolute;
    left: 50px;
    background: #eee;
    width: 1px;
    line-height: 55px;
    height: 30px;
}
input {
    color: #000;
    border-radius: 5px;
    box-shadow: 0 2px 12px 0 rgba(00,00,00,.1);
    width: 100%;
    height: 100%;
    padding: 0 10px 0 70px;

}


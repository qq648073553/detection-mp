
<view class="container" style="padding-top:{{navHeight}}px">
    <navbar page-name="我的工程" showNav="{{scrollUpper}}" customBack bind:back="scrollBottom"></navbar>

    <import src="/template/pro-list/index.wxml" />
   <view class="home-container">
       <view class="home-container-top" style="display:{{!scrollUpper ? 'block' : 'none'}};transition:all .5s;">
           <view class="index-header">
               <navigator url="/pages/add/add" hover-class="none" >
                   <view class="new-pro-btn">新建工程</view>
               </navigator>
               <navigator url="/pages/my/my" hover-class="none"><icon class="iconfont icon-gerenzhongxin-zhong personal-center" /></navigator>
           </view>
           <image src="../../assets/images/index.jpg" class="index-pic-big"></image>
           <van-notice-bar
                   background="#fff"
                   left-icon="volume-o"
                   text="在代码阅读过程中人们说脏话的频率是衡量代码质量的唯一标准。"
           />
       </view>


<!--       <view style="display:{{!scrollUpper ? 'block' : 'none'}};transition:all .2s;" >-->
<!--         -->
<!--       </view>-->
       <view class="{{scrollUpper ? 'pro-header' : ''}}" style="top:{{navHeight}}px">
<!--           <view class="pro-title">我的工程</view>-->
           <van-search
                   class="custom-class"
                   value="{{searchValue}}"
                   shape="round"
                   background="#fff"
                   placeholder="请输入搜索关键词"
                   bind:focus="scrollTop"
           />
<!--           <navigator url="/pages/pro-search/pro-search" hover-class="none">-->
<!--               <van-cell title="请输入搜索关键词" class="index-search" icon="search" border="{{false}}" />-->
<!--           </navigator>-->
           <view wx:if="{{histories.length > 0}}"  class="index-histories">
               <view wx:for="{{histories}}" class="history-item">{{item}}</view>
           </view>


       </view>
       <van-divider wx:if="{{list.length === 0 || overlayShow}}" contentPosition="center">暂无工程</van-divider>
                  <scroll-view wx:else scroll-y="true" style="height: {{scrollHeight}}px;margin-top: {{scrollUpper ? 100 : 0}}px" bindscrolltolower="lower"  >
                      <template  is="proList" data="{{list:list, proStatus:proStatus}}"></template>


                  </scroll-view>

   </view>


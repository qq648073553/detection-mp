<view class="container">
    <image src="../../assets/images/index.jpg" class="index-pic-big"></image>
    <van-notice-bar
            background="#fff"
            left-icon="volume-o"
            text="在代码阅读过程中人们说脏话的频率是衡量代码质量的唯一标准。"
    />
    <view class="index-content">
        <view class="fd-card" wx:for="{{list}}" wx:key="item.id">
            <view class="fd-card-header">
                <view class="pro-ymd">{{item.ymd}}</view>
                <van-tag type="primary" size="large">{{item.status}}</van-tag>
            </view>
            <van-swipe-cell  right-width="{{ item.operations.length * 70 }}">
                <view class="fd-card-body">
                    <view class="pro-title text-line-public">{{item.title}}</view>
                    <view class="pro-remarks text-line-public">{{item.remarks}}</view>
                </view>
                <view slot="right">
                    <view class="pro-btn" wx:for="{{item.operations}}" wx:for-item="operation">{{operation.name}}</view>

                </view>
            </van-swipe-cell>
        </view>


    </view>
    <view class="index-support">元准智能科技提供技术支持</view>

</view>
.hr-table--head,.hr-table--tr {
    display: flex;
    color: grey;
    padding: 20rpx 40rpx;
    border-bottom: 1px solid #efefef;
}
.hr-table--tr{
    color: #000;
}
.hr-table--tbody{
    max-height: 80vh;
    min-height: 50vh;
    overflow: auto;
}
/* .th__delete,.td__delete {
    text-align: center;
    width: 75rpx;
} */
.th__name,.td__name {
    text-align: center;
    width: 250rpx;
}
.th__phone,.td__phone {
    text-align: center;
    flex: 1;
    /* width: 300rpx; */
}
.th__edit,.td__edit {
    text-align: center;
    width: 75rpx;
}
.hr-table--foot{
    width: 100%;
    
    display: flex;
    border-top: 1px solid #efefef;
    height: 120rpx;
    font-size: 40rpx;
    position: fixed;
    bottom: 0;
    align-items: center;
    color: red;
    justify-content: center;
    letter-spacing: 2px;
}
.custom-class .van-popup--center{
    top: 40%;
    
}
.custom-popup .van-popup {
    width: 90%;
    margin: auto;
    /* top: 10%; */
    /* top: 10%;
    width: 100%; */
    /* min-height: 50vh; */
    /* top: 20%; */
}
.popup--body{
    margin:10px;
    width: 500rpx;
}
.popup--title{
    font: 40rpx bolder;
    text-align: center;
    padding: 10px 0;
}
.popup--bottom {
    width: 100%;
    height: 40px;
    display: table;
    border-top: 1px solid #eee;
    border-collapse: collapse;
}
.popup--bottom view {
    display: table-cell;
    border:1px solid #efefef;
    vertical-align: middle;
    text-align: center;
    font: 40rpx bolder;
}
.text__confirm{
    color: #4387F6;
}

<!--pages/pro-search/pro-search.wxml-->
<import src="/template/pro-list/index.wxml" />
<view class="container" style="padding-top:{{navHeight}}px">
    <navbar page-name="我的工程" showNav ></navbar>
    <van-sticky offset-top="{{ navHeight }}">
        <van-search
                class="custom-class"
                value="{{searchValue}}"
                shape="round"
                background="#fff"
                placeholder="请输入搜索关键词"
                bind:search="onSearch"
                bind:clear="onFastSearch"
        />

    </van-sticky>
    <view wx:if="{{histories.length > 0}}"  class="index-histories">
        <view wx:for="{{histories}}" class="history-item" bindtap="onFastSearch" data-title="{{item}}">{{item}}</view>
    </view>
</view>


<view class="search-content">
    <template  is="proList" data="{{list:list, proStatus:proStatus}}"></template>
</view>

.submit-btn{
    margin: 60px auto 30px;
    width: 90%;
    border-radius: 4px;
    height: 40px;
    color: #fff;
    background: #4387F6;
}
.custom-field{
    position: relative;
    display: flex;
    align-items: center;
}
.custom-field::after{
    position: absolute;
    box-sizing: border-box;
    -webkit-transform-origin: center;
    transform-origin: center;
    content: " ";
    pointer-events: none;
    right: 16px;
    bottom: 0;
    left: 16px;
    border-bottom: 1px solid #ebedf0;
    -webkit-transform: scaleY(.5);
    transform: scaleY(.5);
}
.inspect-type {
    padding:2px 5px;
    border-radius: 6px;
    border: 1px solid #000;
}

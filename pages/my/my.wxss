/*.custom-class*/
.my-logout-btn {
    margin: 40px auto;
    background: #4387F6;
    height: 40px;
    line-height: 40px;
    color: white;
    width: 80%;
}
.custom-class .van-popup--center{
    top: 40%;
}
.popup--body{
    margin:10px;
    width: 500rpx;
}
.popup--title{
    font: 40rpx bolder;
    text-align: center;
    padding: 10px 0;
}
.popup--bottom {
    width: 100%;
    height: 40px;
    display: table;
    border-top: 1px solid #eee;
    border-collapse: collapse;
}
.popup--bottom view {
    display: table-cell;
    border:1px solid #efefef;
    vertical-align: middle;
    text-align: center;
    font: 40rpx bolder;
}
.text__confirm{
    color: #4387F6;
}
input {
    color: #000;
    border-radius: 5px;
    /* box-shadow: 0 2px 12px 0 rgba(00,00,00,.1); */
    border: 1px solid #eee;
    width: 100%;
    height: 70rpx;
    padding: 0 10px 0 10px;
    margin-bottom: 30px;
}
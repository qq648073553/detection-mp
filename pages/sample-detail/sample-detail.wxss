
.deg-detail-top{
    font-size: 40rpx;
    height: 200rpx;
    font-weight: bold;
    line-height: 200rpx;
    text-align: center;
}
.deg-detail-banner{
    height: 150rpx;
    display: flex;
    justify-content: space-between;
    align-items: center;
    background: #4387F6;
    padding-left: 15px;
    margin-bottom: 20px;
}

.deg-status{
    color: #fff;
    margin-bottom: 10px;
    font-size: 40rpx;
}
.deg-date{
    color: #fff;
}
.deg-detail-btn{
    display: inline-block;
    color: #fff;
    margin-right: 15px;
    font-size: 40rpx;
}
.deg-detail-flag{
    position: relative;
    background: #F9FBFF;
    line-height: 40px;
    height: 40px;
    padding: 0 15px;
}

.desc-class .van-step__title view:nth-child(2){
    margin-top: 5px;
    text-indent: 5px;
    color: #A1A1A1;
}
.deg-flag-btn {
    position: absolute;
    right: 15px;
    top: 0;
    bottom: 0;
    margin: auto;
    border: 1px solid #000;
    background: #fff;
    height: 30px;
    line-height: 30px;
}
.deg-flag-nav {
    position: absolute;
    right: 15px;
    top: 0;
    bottom: 0;
    margin: auto;
    border: 1px solid #000;
    border-radius: 4px;
    padding: 0 5px;
    background: #fff;
    height: 30px;
    line-height: 30px;
}
.copy-btn {
    margin: 0 10px;
}

/* pages/settle/settle.wxss */
.settle-container{
    background: #F3F3F2;
    min-height: 100vh;
}
.settle-amount{
    overflow: hidden;
    background: #7096FE linear-gradient(to right, #4387F6, #799CFD);

}
.settle-filter{
    display: flex;
    align-items: center;
    margin: 10px 0 10px 20px;
    background: transparent;
    border-radius: 4px;
    padding: 5px;
    width: max-content;
    border: 1px solid #fff;
}
.filter-flag{
    font-size: 18px;
    color: #fff;
}
.settle-line{
    height: 15px;
    margin: 0 10px;
    background: #fff;
    width: 1px;
}
.amount-title{
    text-align: center;
    color: #b8cde8;
}
.amount-num-large{
    margin-top: 10px;
    text-align: center;
    font-size: 40rpx;
    color: #fff;
}
.amount-num{
    margin-top: 5px;
    text-align: center;
    font-size: 28rpx;
    color: #fff;
}
.amount-others{
    padding: 30px 20px;
    display: flex;
    align-items: center;
}
.amount-o-item{
    flex: 1;
    margin-right: 20px;
}
.settle-list{
    width: 90%;
    margin: 20px auto 0;
    background: #fff;
    border-radius: 8px;
    height: 300px;
}
.settle-down-btn {
    float: right;
    width: 60px;
    border-radius: 4px;
    color: #fff;
    background: #4387F6;
}

